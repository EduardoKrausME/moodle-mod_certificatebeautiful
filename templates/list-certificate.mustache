{{!
    @template mod_certificatebeautiful/list-certificate

    Example context (json):
    {
      "class-root": "certificate-container",
      "pages": [
        {
          "title": "Página 1",
          "pagina": "<div>Conteúdo da Página 1</div>",
          "addpage_href": "/add-page/1",
          "addpage_title": "Adicionar Página 1"
        }
      ]
    }
}}

<div class="list-certificate {{{class-root}}}">
    {{#pages}}
        <fieldset>
            <legend>{{{title}}}</legend>
            <div class="certificate-page-root mb-3">
                <div class="certificate-page">
                    {{{pagina}}}
                </div>
            </div>
            <div>
                <a href="{{{addpage_href}}}" class="btn btn-success pt-1 pb-1">
                    {{{addpage_title}}}
                </a>
            </div>
        </fieldset>
    {{/pages}}
</div>
