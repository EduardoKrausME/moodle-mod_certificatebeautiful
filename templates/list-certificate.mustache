{{!
    @template mod_certificatebeautiful/list-certificate

    Example context (json):
    {
      "class-root": "certificate-container",
      "pages": [
        {
          "title": "Página 1",
          "pagina": "<div>Conteúdo da Página 1</div>",
          "addpage_href": "/add-page/1",
          "addpage_title": "Adicionar Página 1"
        }
      ]
    }
}}

<div class="{{{class-root}}}">
    {{#pages}}
        <fieldset>
            <legend>{{{title}}}</legend>
            <div class="certificate-page-root mb-3">
                <div class="certificate-page">
                    {{{pagina}}}
                </div>
            </div>
            <div>
                <a href="{{{addpage_href}}}" class="btn btn-success pt-1 pb-1">
                    {{{addpage_title}}}
                </a>
            </div>
        </fieldset>
    {{/pages}}
</div>

<style>
    fieldset {
        border: 1px solid #dee2e6;
        margin: 2px;
        padding: 0 10px 14px;
    }
    fieldset legend {
        float: none;
        margin: 0 17px;
        width: auto;
        padding: 4px;
        font-size: 17px;
    }
    .certificate-page-root {
        border: 4px dashed #31468c;
        margin: 11px auto;
        padding: 2px;
    }
    .certificate-page-root .certificate-page {
        padding: 10px;
        position: relative;
        zoom: .35;
    }
    .certificate-flex-gap {
        gap: 10px
    }
</style>

