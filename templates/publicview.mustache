{{!
    @template mod_certificatebeautiful/publicview

    Example context (json):
    {
      "code": true,
      "urlcode": "https://example.com/validate?code=ABC123",
      "code": "ABC123",
      "date": "2024-09-03",
      "username": "joaosilva",
      "name": "João Silva",
      "course": "Curso de Programação Avançada"
    }

}}

{{#code}}
    <table class="table table-striped">
        <tr>
            <th>{{#str}}validate_certificate_code,certificatebeautiful{{/str}}</th>
            <td><a href="{{{urlcode}}}" target="_blank">{{{code}}}</a></td>
        </tr>
        <tr>
            <th>{{#str}}validate_certificate_date,certificatebeautiful{{/str}}</th>
            <td>{{{date}}}</td>
        </tr>
        {{#username}}
            <tr>
                <th>{{#str}}validate_certificate_user,certificatebeautiful{{/str}}</th>
                <td>{{{username}}}</td>
            </tr>
        {{/username}}
        {{#name}}
            <tr>
                <th>{{#str}}validate_certificate_name,certificatebeautiful{{/str}}</th>
                <td>{{{name}}}</td>
            </tr>
        {{/name}}
        {{#course}}
            <tr>
                <th>{{#str}}validate_certificate_course,certificatebeautiful{{/str}}</th>
                <td>{{{course}}}</td>
            </tr>
        {{/course}}
    </table>
{{/code}}

{{^code}}
    {{> core/notification_error}}
{{/code}}